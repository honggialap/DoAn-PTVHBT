
@model List<NomNom.Models.TaiKhoans.TaiKhoanDTO>
@{
    ViewBag.Title = "Thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{

}

<link href="~/Assets/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<!-- Page level plugins -->
<script src="~/Assets/admin/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Assets/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<!-- Page level custom scripts -->
<script src="~/Assets/admin/js/demo/datatables-demo.js"></script>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="form-row card-header py-3">
        <div class="col-sm-12 col-md-5"><h6 class="m-0 font-weight-bold text-primary">Danh mục Tài khoản</h6></div>       
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="width:200px">Hành động</th>
                        <th>Tên tài khoản</th>
                        <th>Chức vụ</th>
                        <th>Họ tên</th>                     
                        <th>Tình trạng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>                           
                            <td style="width:200px">
                                <a href="/Admin/TaiKhoan/ChiTiet/@item.Id"><button type="button" class="btn btn-primary">Chi tiết</button></a>
                                @if (item.ChucVuID != 1)
                                {
                                    if (item.IsBan)
                                    {
                                        <a href="/Admin/TaiKhoan/MoKhoa/@item.Id"><button type="button" class="btn btn-success">Mở khóa</button></a>
                                    }
                                    else
                                    {
                                        <a href="/Admin/TaiKhoan/Khoa/@item.Id"><button type="button" class="btn btn-danger">Khóa</button></a>
                                    }
                                 }
                            </td>
                            <td>@item.TenTaiKhoan</td>
                            <td>@item.ChucVuTen</td>
                            <td>@item.Ho @item.Ten</td>                            
                            @if (item.IsBan)
                            {
                                <td><button class="btn btn-danger">Bị khóa</button></td>
                            }
                            else
                            {
                                <td><button class="btn btn-success">Bình thường</button></td>
                            }
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
