
@model IEnumerable<NomNomConnection.ThuongHieu>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
    }
   
    <head>
        <style>
            table {
                border-collapse: collapse;
                width: 50%;
                margin: auto;
            }

            th, td {
                text-align: center;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #5d5e63
            }

            th {
                background-color: #2a9fd6;
                color: white;
            }
        </style>
    </head>
    <body>

        <h2>Quản lí thương hiệu</h2>

        <table>
            <tr>
                <th>Mã thương hiệu</th>
                <th>Tên thương hiệu</th>
                <th>Tình trạng</th>
                <th colspan="2">
                    <a href="@Url.Action("Create","ThuongHieuAdmin")"><img src="~/Images/AddIcon.png" /></a">
                </th>
            </tr>
            @foreach(var th in Model)
            {
            <tr>
                <td>@th.id</td>
                <td>@th.ten</td>
                <td>@th.tinhtrang</td>
                <td><a href="@Url.Action("Edit","ThuongHieuAdmin",new { id=th.id})"><img src="~/Images/EditIcon.png" /></a></td>
                <td><a href="@Url.Action("Delete","ThuongHieuAdmin",new { id=th.id})"><img src="~/Images/DeleteIcon.png" /></a></td>
            </tr>
            }
        </table>

    </body>
