
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<style>
    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #2a9fd6;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

  
</style>


    <h3>Thêm Nhà cung cấp</h3>

    <div style="width:50%;margin:auto">
        @using (Html.BeginForm("Create", "NhaCungCapAdmin", FormMethod.Post))
        {
            <label for="fname">Mã nhà cung cấp</label>
            <input type="text" id="fname" name="id" style="background-color:#5d5e63" placeholder="Mã nhà cung cấp.." required>

            <label for="lname">Tên nhà cung cấp</label>
            <input type="text" id="lname" name="ten" style="background-color:#5d5e63" placeholder="Tên nhà cung cấp.." required>

            <label for="country">Tình trạng</label>
            <select id="tinhtrang" name="tinhtrang" style="background-color:#5d5e63" required>
                <option  value="0">Khóa</option>
                <option selected  value="1">Không khóa</option>
            </select>

            <input type="submit" value="Thêm nhà cung cấp">
        }
    </div>

