
@model List<NomNom.Models.DonHangs.DonHangDTO>
@{
    ViewBag.Title = "Đơn hàng đã duyệt";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{

}

<link href="~/Assets/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<script src="~/Assets/admin/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/Assets/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
<script src="~/Assets/admin/js/demo/datatables-demo.js"></script>

<div class="card shadow mb-4">
    <div class="form-row card-header py-3">
        <div class="col-sm-12 col-md-5"><h6 class="m-0 font-weight-bold text-primary"><a href="/Admin/DonHang/Index">Quản lý đơn hàng</a> > Đơn hàng đã duyệt</h6></div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0" style="overflow: scroll">
                <thead>
                    <tr>
                        <th style="width:200px">Hành dộng</th>
                        <th>Mã đơn hàng</th>
                        <th>Khách hàng</th>
                        <th>Tên người nhận</th>
                        <th>Địa chỉ giao hàng</th>
                        <th>Điện thoại</th>
                        <th>Ngày giao dự kiến</th>
                        <th>Phí ship</th>
                        <th>Tổng tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:200px">
                                <a href="/Admin/DonHang/ChiTiet/@item.Id"><button type="button" class="btn btn-success">Chi tiết</button></a>
                                <a href="/Admin/DonHang/Giao/@item.Id"><button type="button" class="btn btn-success">Giao</button></a>
                                <a href="@Url.Action("Huy","DonHang",new {Id=item.Id,redirect="DaDuyet"})"><button type="button" class="btn btn-danger">Hủy</button></a>
                            </td>
                            <td>@item.Id</td>
                            <td>@item.KhachHangTen</td>
                            <td>@item.TenNguoiNhan</td>
                            <td>@item.DiaChi @item.KhuVucTen</td>
                            <td>@item.SoDienThoai</td>
                            <th>@item.NgayGiaoDuKienMin.ToString("dd/M/yyyy") - @item.NgayGiaoDuKienMax.ToString("dd/M/yyyy")</th>
                            <td>@item.PhiShip</td>
                            <td>@item.ThanhTien</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
