@{
    ViewBag.Title = "Tin tức mới nhất";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script>
        var skip = 0;
        var take = 10;
        var step = 5;
        function loadTinTuc() {
            $.ajax({
                url: '/TinTuc/LoadTinTuc',
                type: 'GET',
                data: { skip: skip, take: take },
                dataType: 'json',
                success: function (response) {
                    var data = response.data;
                    if (data.length != 0) {
                        var html = $('#TinTucData').html();
                        var template = $('#tintuc-template').html();
                        $.each(data, function (i, item) {
                            html += Mustache.render(template, {
                                Id: item.Id,
                                MieuTa: item.MieuTa,
                                HinhAnh: item.HinhAnh,
                                TieuDe: item.TieuDe
                            });
                        });
                        $('#TinTucData').html(html);
                    }
                }
            });
        }
        function loadmore() {
            skip += take;
            take = step;
            loadTinTuc();
        }
        loadTinTuc(skip, take);
    </script>
}
<div class="page-top-info">
    <div class="container">
        <h4>Mới nhất</h4>
        <div class="site-pagination">
            <a href="/Home">Trang chủ</a> /
            <a>Tin tức</a>
        </div>
    </div>
</div>
<div id="TinTucData"></div>
<div class="container" style="margin-top:10px">
    <div class="col-8">
        <center><button onclick="loadmore()" type="button" class="btn btn-dark" style="text-align: center;font-size: 25px;">Xem thêm</button></center>
    </div>
</div>
<script id="tintuc-template" type="x-tmpl-mustache">
    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-8">
                <div class="cart-table">
                    <div class="col-8 d-flex justify-content-start align-items-start">
                        <div class="form-row" style="width:150px;height:150px">
                            <img src="{{HinhAnh}}" style="object-fit:contain;max-height:150px;max-width:150px" />
                        </div>
                        <div class="col-12 form-row">
                            <div class="w-100"><a href="/TinTuc/ChiTiet/{{Id}}"><font size="5">{{TieuDe}}</font></a></div>
                            <div class="w-100">
                                <font size="3">{{MieuTa}}</font>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>