    <script src="~/Assets/client/js/jquery-3.2.1.min.js"></script>
    <script src="~/Assets/client/js/bootstrap.min.js"></script>
    <script src="~/Assets/client/js/jquery.slicknav.min.js"></script>
    <script src="~/Assets/client/js/owl.carousel.min.js"></script>
    <script src="~/Assets/client/js/jquery.nicescroll.min.js"></script>
    <script src="~/Assets/client/js/jquery.zoom.min.js"></script>
    <script src="~/Assets/client/js/jquery-ui.min.js"></script>
    <script src="~/Assets/client/js/main.js"></script>
    @RenderSection("jsFooter", required: false)
    <script>
        $.ajax({
            url: '/GioHang/SoLuong',
            type: 'GET',
            dataType: 'json',         
            success: function (response) {
                document.getElementById("spCount").innerHTML = response.data;
            }
        })
    </script>
</body>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xác nhận đăng xuất</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Xác nhận đăng xuất</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy bỏ</button>
                <a class="btn btn-primary" href="~/TaiKhoan/DangXuat">Đăng xuất</a>
            </div>
        </div>
    </div>
</div>