    <link rel="stylesheet" href="~/Assets/client/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/Assets/client/css/animate.css" />
    <link rel="stylesheet" href="~/Assets/client/css/style.css" />
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header section -->
    <header class="header-section">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 text-center text-lg-left">
                        <!-- logo -->
                        <a href="~/Home/Index" class="site-logo">
                            <img src="~/assets/client/img/logo.png" alt="">
                        </a>
                    </div>
                    <div class="col-xl-6 col-lg-5">
                        <form class="header-search-form">
                            <input type="text" placeholder="Tìm kiếm sản phẩm...">
                            <button><i class="flaticon-search"></i></button>
                        </form>
                    </div>
                    <div class="col-xl-4 col-lg-5">
                        <div class="user-panel">
                            <div class="up-item">

                                @if (HttpContext.Current.Session[NomNom.Common.CommonConstants.USER_SESSION] != null)
                                {
                                    <ul class="main-menu">
                                        <li>
                                            <a>
                                                <i class="flaticon-profile"></i>
                                                <span>Chào @(((NomNom.Common.UserLogin)(HttpContext.Current.Session[NomNom.Common.CommonConstants.USER_SESSION])).Name)</span>
                                                <img class="img-profile rounded-circle" style="width:40px" src="@(((NomNom.Common.UserLogin)(HttpContext.Current.Session[NomNom.Common.CommonConstants.USER_SESSION])).Avatar)">
                                            </a>
                                            <ul class="sub-menu">
                                                <li><a href="/TaiKhoan">Thông tin tài khoản</a></li>
                                                <li><a href="/GioHang">Giỏ hàng</a></li>
                                                <li><a data-toggle="modal" data-target="#logoutModal">Đăng xuất</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                }
                                else
                                {
                                    <a href="~/DangNhap">Đăng nhập</a> <a> hoặc </a> <a href="~/DangKy">Đăng ký</a>
                                }

                            </div>
                            <div class="up-item">
                                <div class="shopping-card">
                                    <i class="flaticon-bag"></i>
                                    <span id="spCount">0</span>
                                </div>
                                <a href="/GioHang">Giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="main-navbar">
            <div class="container">
                <!-- menu -->
                <ul class="main-menu">
                    <li><a href="~/Home/Index">Trang chủ</a></li>
                    <li><a href="~/SanPham/Index">Sản phẩm</a></li>

                    @*<li>
                            <a href="#">Pages</a>
                            <ul class="sub-menu">
                                <li><a href="./product.html">Product Page</a></li>
                                <li><a href="./category.html">Category Page</a></li>
                                <li><a href="./cart.html">Cart Page</a></li>
                                <li><a href="./checkout.html">Checkout Page</a></li>
                                <li><a href="./contact.html">Contact Page</a></li>
                            </ul>
                        </li>*@

                </ul>
            </div>
        </nav>
    </header>
    <!-- Header section end -->
    @RenderBody()
    <!-- Footer section -->
